<% if @current_user %>
  <h1><%= @place["name"] %></h1>

  <!--<h2>My Posts</h2>-->

    <p>
    <a class="btn btn-secondary" href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
    </p>
    <p>
     <a href="/places">Back to All Places</a>
    </p>

<div class="container">
  <div class="row">
    <% for post in @posts %>
      <div class="col-md-4 col-sm-6">  <!-- I'm using the grid system here but also have these column sizes built in. Do I need this?-->
        <h3><%= post["title"] %></h3>
        <h4><%= post["posted_on"] %></h4>
        <img class="img-fluid" src="<%= post["image"] %>" class="w-full">
        <p><%= post["description"] %></p>
      </div>
    <% end %>
  </div>
</div>  




<% else %>
  You must first <a href="/login">login</a> to see more about these places.
<% end %>

