<div class="mt-4 mb-4">
  <h1>New Post</h1>
</div>

<%= form_with :model => @post do |form| %>
  <div class="mt-4 mb-4">
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </div>
  
  <div class="mt-4 mb-4">
    <%= form.label "posted_on" %>
    <%= form.date_field "posted_on" %>
  </div>
  
  <!--<p>
    <%= form.label "image" %>
    <%= form.text_field "image" %>
  </p>-->

  <div class="mb-3">
    <%= form.label "uploaded_image", :class => "form-label" %>
    <%= form.file_field "uploaded_image", :accept => "image/png,image/jpg,image/jpeg,image/gif", :class => "form-control" %>
  </div>
  
  <div class="mt-4 mb-4">
    <%= form.label "description" %>
    <%= form.text_area "description",size:"60x10" %>
  </div>

  <div class="mt-4 mb-4">
    <%= form.submit "Create Post", class: "btn btn-secondary"%>
  </div>
  <%= form.hidden_field "place_id" %>
<% end %>
